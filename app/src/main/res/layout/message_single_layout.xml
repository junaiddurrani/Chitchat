<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/messageSingleLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/blank_pic"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:id="@+id/messageProfileLayout"/>

    <TextView
        android:id="@+id/name_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/messageProfileLayout"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/messageProfileLayout"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/name_text_layout"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"
        android:paddingEnd="5dp"
        android:paddingStart="8dp"
        android:paddingBottom="5dp"
        android:id="@+id/messageTextLayout"
        android:layout_toRightOf="@+id/messageProfileLayout"
        android:paddingLeft="5dp"
        tools:ignore="RtlHardcoded,RtlSymmetry" />

    <TextView
        android:id="@+id/time_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:layout_toEndOf="@+id/name_text_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"/>

</RelativeLayout>