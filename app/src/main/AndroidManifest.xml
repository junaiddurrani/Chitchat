<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.social.chitchat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Login"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".activities.Register"
            android:label="Add Post"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity android:name=".activities.AddBlog" />
        <activity
            android:name=".activities.ViewEditAccount"
            android:label="Edit Account"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".activities.ProfileEdit"
            android:label="Edit Profile"
            android:parentActivityName=".activities.ViewEditAccount"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name=".activities.BlogsA"
            android:label="Blogs"
            android:parentActivityName=".activities.ViewEditAccount"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".activities.UserProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_NoActionBar" />
        <activity
            android:name=".activities.FriendList"
            android:label="Friends List"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Chat"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Tutorials"
            android:label="Languages Tutorials"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.ChatEvent"
            android:label="Events"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Group_Chat"
            android:label="Group Chat"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Users"
            android:label="People"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.Pictures"
            android:label="Photos"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TermsConditions"
            android:label="Terms and Policy"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.Chat_List"></activity>
    </application>

</manifest>